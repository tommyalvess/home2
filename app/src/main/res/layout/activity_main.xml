<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="home2.fiap.com.br.dados.MainActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtU"
        android:textAlignment="center"
        android:textSize="@dimen/size1"
        android:layout_marginTop="@dimen/marTop"
        android:id="@+id/txtDados"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/dado1"
        android:layout_marginTop="@dimen/marTop"
        android:id="@+id/img1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtP"
        android:textAlignment="center"
        android:textSize="@dimen/size1"
        android:layout_marginTop="@dimen/marTop"
        android:id="@+id/txtPc"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/dado1"
        android:layout_marginTop="@dimen/marTop"
        android:id="@+id/img2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marTop"
        android:text="@string/jogar"
        android:onClick="jogar"/>

</LinearLayout>
